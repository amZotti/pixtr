<h2>Galleries</h2>

<%= link_to "Create a gallery", "/galleries/new" %>

<ul>
  <% @galleries.each do |gallery| %>
    <li><%= link_to gallery.name, gallery %></li>
  <% end %>
</ul>



<h2>Tags</h2>
<p><%= flash[:error] %><p>
<%= form_for @search do |form| %>
  <%= form.label "Search for a tag" %>
  <%= form.text_field :query %>
  <%= form.submit %>
<% end %>
